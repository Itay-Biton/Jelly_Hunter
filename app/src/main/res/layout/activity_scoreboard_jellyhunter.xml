<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Activity_Scoreboard_Jellyhunter">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.8"
        android:src="@drawable/img_bg_scoreboard"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/jellyhunter_LAY_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/jellyhunter_BTN_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/ic_back"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/jellyhunter_IMG_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:scaleType="fitCenter"
                android:src="@drawable/img_title"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:padding="16dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/txt_scoreboard"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:padding="16dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/jellyhunter_TXT_scoreboard"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:src="@drawable/txt_scoreboard"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/jellyhunter_LAY_score0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/jellyhunter_IMG_jelly_score0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:scaleType="fitCenter"
                    android:src="@drawable/txt_jellyfish"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/jellyhunter_TXT_jelly_score0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="00"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/jellyhunter_IMG_meters_score0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/txt_meters"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/jellyhunter_TXT_meters_score0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="00"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/jellyhunter_LAY_score1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/jellyhunter_IMG_jelly_score1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:scaleType="fitCenter"
                    android:src="@drawable/txt_jellyfish"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/jellyhunter_TXT_jelly_score1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="00"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/jellyhunter_IMG_meters_score1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/txt_meters"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/jellyhunter_TXT_meters_score1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="00"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/jellyhunter_LAY_score2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/jellyhunter_IMG_jelly_score2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:scaleType="fitCenter"
                    android:src="@drawable/txt_jellyfish"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/jellyhunter_TXT_jelly_score2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="00"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/jellyhunter_IMG_meters_score2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/txt_meters"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/jellyhunter_TXT_meters_score2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="00"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/jellyhunter_LAY_score3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/jellyhunter_IMG_jelly_score3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:scaleType="fitCenter"
                    android:src="@drawable/txt_jellyfish"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/jellyhunter_TXT_jelly_score3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="00"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/jellyhunter_IMG_meters_score3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/txt_meters"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/jellyhunter_TXT_meters_score3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="00"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/jellyhunter_LAY_score4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/jellyhunter_IMG_jelly_score4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:scaleType="fitCenter"
                    android:src="@drawable/txt_jellyfish"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/jellyhunter_TXT_jelly_score4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="00"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/jellyhunter_IMG_meters_score4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/txt_meters"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/jellyhunter_TXT_meters_score4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="00"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>